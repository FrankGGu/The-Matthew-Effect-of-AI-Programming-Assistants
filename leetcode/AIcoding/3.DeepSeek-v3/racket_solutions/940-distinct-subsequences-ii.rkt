(define/contract (distinct-subseq-ii s)
  (-> string? exact-integer?)
  (define mod 1000000007)
  (define n (string-length s))
  (define dp (make-vector (+ n 1) 0))
  (define last (make-hash))
  (vector-set! dp 0 1)
  (for ([i (in-range 1 (+ n 1))])
    (define c (string-ref s (- i 1)))
    (define dup (hash-ref last c 0))
    (vector-set! dp i (modulo (* 2 (vector-ref dp (- i 1))) mod))
    (vector-set! dp i (modulo (- (vector-ref dp i) dup) mod))
    (hash-set! last c (vector-ref dp (- i 1))))
  (modulo (- (vector-ref dp n) 1) mod))