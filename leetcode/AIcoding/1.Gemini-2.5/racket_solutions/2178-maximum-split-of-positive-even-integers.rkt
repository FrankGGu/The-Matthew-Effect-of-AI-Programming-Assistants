(define (maximum-split finalSum)
  (if (odd? finalSum)
      '()
      (let loop ((current-sum finalSum)
                 (current-even 2)
                 (result '()))
        (if (>= current-sum current-even)
            (if (>= (- current-sum current-even) (+ current-even 2))
                (loop (- current-sum current-even)
                      (+ current-even 2)
                      (cons current-even result))
                (reverse (cons current-sum result)))
            (reverse result)))))