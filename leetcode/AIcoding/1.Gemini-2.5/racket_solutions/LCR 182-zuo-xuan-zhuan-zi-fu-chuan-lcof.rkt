(define (dynamic-password nums n)
  (let loop ((remaining-nums nums)
             (all-reversed-chunks '()))
    (if (empty? remaining-nums)
        (apply append (reverse all-reversed-chunks))
        (let* ((chunk (take remaining-nums n))
               (reversed-chunk (reverse chunk)))
          (loop (drop remaining-nums n)
                (cons reversed-chunk all-reversed-chunks))))))