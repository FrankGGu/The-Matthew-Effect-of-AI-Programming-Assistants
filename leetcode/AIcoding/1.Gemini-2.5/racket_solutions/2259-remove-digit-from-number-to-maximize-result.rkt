(define (remove-digit-to-maximize-result number digit)
  (let* ((n (string-length number))
         (max-result ""))
    (for ((i (range n)))
      (when (char=? (string-ref number i) digit)
        (let* ((prefix (substring number 0 i))
               (suffix (substring number (+ i 1) n))
               (current-result (string-append prefix suffix)))
          (when (or (string=? max-result "")
                    (string> current-result max-result))
            (set! max-result current-result)))))
    max-result))