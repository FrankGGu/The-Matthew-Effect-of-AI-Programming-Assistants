(define (mergeArrays nums1 nums2)
  (let* ((m (length nums1))
         (n (length nums2))
         (i 0)
         (j 0)
         (result '()))
    (letrec ((helper (lambda (i j result)
                       (cond
                         ((and (= i m) (= j n)) (reverse result))
                         ((= i m) (helper i (+ j 1) (cons (list (list-ref (list-ref nums2 j) 0) (list-ref (list-ref nums2 j) 1)) result)))
                         ((= j n) (helper (+ i 1) j (cons (list (list-ref (list-ref nums1 i) 0) (list-ref (list-ref nums1 i) 1)) result)))
                         ((< (list-ref (list-ref nums1 i) 0) (list-ref (list-ref nums2 j) 0)) (helper (+ i 1) j (cons (list (list-ref (list-ref nums1 i) 0) (list-ref (list-ref nums1 i) 1)) result)))
                         ((> (list-ref (list-ref nums1 i) 0) (list-ref (list-ref nums2 j) 0)) (helper i (+ j 1) (cons (list (list-ref (list-ref nums2 j) 0) (list-ref (list-ref nums2 j) 1)) result)))
                         (else (helper (+ i 1) (+ j 1) (cons (list (list-ref (list-ref nums1 i) 0) (+ (list-ref (list-ref nums1 i) 1) (list-ref (list-ref nums2 j) 1))) result)))))))
      (helper i j result))))