(define (ways-to-split-array nums)
  (let* ((n (length nums))
         (total (apply + nums))
         (count 0)
         (curr-sum 0))
    (for ((i (in-range (- n 1))))
      (set! curr-sum (+ curr-sum (list-ref nums i)))
      (if (>= curr-sum (- total curr-sum))
          (set! count (+ count 1))))
    count))