(define (minimum-boxes n)
  (let loop ([k 1] [count 0] [total 0])
    (if (> total n)
        (+ k -1)
        (let ([new-count (+ count k)])
          (if (>= (+ total new-count) n)
              (let ([diff (- n total)])
                (+ count (ceiling (/ (- (sqrt (+ 1 (* 8 diff))) 1) 2))))
              (loop (+ k 1) new-count (+ total new-count)))))))