(define (traffic-lights n roads)
  (let* ((adj (make-vector n '()))
         (ans (make-vector n #f)))
    (for-each (lambda (road)
                (let ((u (car road))
                      (v (cadr road)))
                  (vector-set! adj u (cons v (vector-ref adj u)))
                  (vector-set! adj v (cons u (vector-ref adj v)))))
              roads)
    (define (dfs u color)
      (vector-set! ans u color)
      (for-each (lambda (v)
                  (when (not (vector-ref ans v))
                    (dfs v (not color))))
                (vector-ref adj u)))
    (dfs 0 #t)
    (for/list ([i (in-range n)])
      (if (vector-ref ans i) 1 0))))