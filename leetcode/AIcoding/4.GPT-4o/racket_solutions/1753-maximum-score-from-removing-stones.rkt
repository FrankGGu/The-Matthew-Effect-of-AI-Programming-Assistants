(define (maximumScore a b c)
  (define stones (vector a b c))
  (define (max-score stones)
    (if (or (= (vector-ref stones 0) 0) 
            (= (vector-ref stones 1) 0))
        0
        (let* ((max1 (vector-ref stones 0))
               (max2 (vector-ref stones 1))
               (max3 (vector-ref stones 2))
               (index1 (if (and (>= max1 max2) (>= max1 max3)) 0
                        (if (and (>= max2 max1) (>= max2 max3)) 1 2)))
               (index2 (if (or (= index1 0) (= index1 1)) 
                            (if (= index1 0) 
                                (if (>= max2 max3) 1 2) 
                                (if (>= max1 max3) 0 2)) 
                            0)))
          (vector-set! stones index1 (- (vector-ref stones index1) 1))
          (vector-set! stones index2 (- (vector-ref stones index2) 1))
          (+ 1 (max-score stones)))))
  (max-score stones))