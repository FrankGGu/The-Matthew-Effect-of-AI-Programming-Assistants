(define (transformArray arr)
  (define odds (filter odd? arr))
  (define evens (filter even? arr))
  (define (interleave odds evens)
    (if (and (null? odds) (null? evens))
        '()
        (cons (if (null? odds) (car evens)
                  (if (null? evens) (car odds)
                      (if (< (car odds) (car evens))
                          (car odds)
                          (car evens))))
              (interleave (if (and (not (null? odds)) (or (null? evens) (< (car odds) (car evens))))
                              (cdr odds) odds)
                          (if (and (not (null? evens)) (or (null? odds) (< (car evens) (car odds))))
                              (cdr evens) evens)))))
  (interleave (sort odds <) (sort evens <)))

(define (sort lst cmp)
  (if (null? lst)
      '()
      (cons (car lst) (sort (filter (lambda (x) (cmp x (car lst))) (cdr lst)) cmp)))))