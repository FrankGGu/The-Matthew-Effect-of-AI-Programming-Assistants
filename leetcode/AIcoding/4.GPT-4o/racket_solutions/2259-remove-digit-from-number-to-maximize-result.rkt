(define (remove-digit number digit)
  (define str-number (number->string number))
  (define digit-str (number->string digit))
  (define max-result '())
  (for-each (lambda (i)
              (when (and (char=? (string-ref str-number i) (string-ref digit-str 0))
                         (or (= i 0) (not (char=? (string-ref str-number (- i 1)) #\0))))
                         (< i (string-length str-number)))
                (define new-number (string-append (substring str-number 0 i)
                                                   (substring str-number (+ i 1)))
                (set! max-result (max max-result (string->number new-number)))))
            (range (string-length str-number)))
  (if (null? max-result) ""
      (number->string max-result)))