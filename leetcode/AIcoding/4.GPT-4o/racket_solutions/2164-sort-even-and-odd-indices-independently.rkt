(define (sortEvenOdd nums)
  (define even-nums (filter-indexed (lambda (i n) (even? i)) nums))
  (define odd-nums (filter-indexed (lambda (i n) (odd? i)) nums))
  (define sorted-even (sort even-nums <))
  (define sorted-odd (sort odd-nums <))
  (define (merge sorted-even sorted-odd)
    (define (helper even odd index)
      (if (null? even)
          (if (null? odd) '() (cons (car odd) (helper even (cdr odd) (+ index 1))))
          (if (null? odd) (cons (car even) (helper (cdr even) odd (+ index 1)))
              (if (even? index)
                  (cons (car even) (helper (cdr even) odd (+ index 1)))
                  (cons (car odd) (helper even (cdr odd) (+ index 1)))))))
    (helper sorted-even sorted-odd 0))
  (merge sorted-even sorted-odd))