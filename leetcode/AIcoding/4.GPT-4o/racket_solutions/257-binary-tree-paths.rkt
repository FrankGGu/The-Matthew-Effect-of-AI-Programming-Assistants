(define (binary-tree-paths root)
  (define (helper node path)
    (if (null? node)
        '()
        (let* ((new-path (if (null? path) (number->string (node-val node)) (string-append path "->" (number->string (node-val node)))))
               (left-paths (helper (left node) new-path))
               (right-paths (helper (right node) new-path)))
          (if (and (null? left-paths) (null? right-paths))
              (list new-path)
              (append left-paths right-paths)))))
  (helper root '()))