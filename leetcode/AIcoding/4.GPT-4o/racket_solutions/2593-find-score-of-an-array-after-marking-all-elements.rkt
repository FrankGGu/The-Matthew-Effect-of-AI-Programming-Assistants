(define (find-score nums)
  (define marked (make-vector (vector-length nums) #f))
  (define scores 0)
  (for* ([i (in-range (vector-length nums))])
    (when (not (vector-ref marked i))
      (set! scores (+ scores (vector-ref nums i)))
      (set! marked (vector-set! marked i #t))
      (when (> (+ i 1) 0)
        (set! marked (vector-set! marked (- i 1) #t)))
      (when (< (+ i 1) (vector-length nums))
        (set! marked (vector-set! marked (+ i 1) #t)))))
  scores)

(define (find-score-of-array-after-marking-all-elements nums)
  (find-score nums))