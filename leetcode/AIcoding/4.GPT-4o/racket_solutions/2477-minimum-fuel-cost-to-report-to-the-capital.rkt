(define (minimum-fuel-cost roads seats)
  (define graph (make-hash))
  (define (add-edge u v)
    (hash-set! graph u (cons v (hash-ref graph u '())))
    (hash-set! graph v (cons u (hash-ref graph v '()))))
  (for-each (lambda (road)
              (add-edge (car road) (cadr road)))
            roads)

  (define (dfs node parent)
    (define total-people 1)
    (define fuel 0)
    (for-each (lambda (neighbor)
                (when (not (= neighbor parent))
                  (let-values (((sub-people sub-fuel) (dfs neighbor node)))
                    (set! total-people (+ total-people sub-people))
                    (set! fuel (+ fuel sub-fuel))
                    (set! fuel (+ fuel (quotient sub-people seats)))))
                )
              (hash-ref graph node '()))
    (values total-people fuel))

  (let-values (((_ total-fuel) (dfs 0 -1)))
    total-fuel))