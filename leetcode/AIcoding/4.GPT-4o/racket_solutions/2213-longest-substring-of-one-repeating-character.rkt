(define (longest-repeating-character-substring s)
  (define (max-length lst)
    (foldl (lambda (x acc) (max (length x) acc)) 0 lst))
  (define (group-characters str)
    (if (null? str) '()
        (let loop ((current (car str)) (count 1) (rest (cdr str)) (result '()))
          (cond ((null? rest) (reverse (cons (make-string count current) result)))
                ((eq? current (car rest)) (loop current (+ count 1) (cdr rest) result))
                (else (loop (car rest) 1 (cdr rest) (cons (make-string count current) result)))))))
  (max-length (group-characters (string->list s))))