(define (numMusicPlaylists n l k)
  (define mod 1000000007)
  (define dp (make-vector (+ 1 n) (make-vector (+ 1 l) 0)))
  (vector-set! (vector-ref dp 0) 0 1)
  (for ([i (in-range 1 (+ 1 l))])
    (for ([j (in-range 1 (+ 1 n))])
      (define new-count  (if (>= j i)
                             (mod (vector-ref (vector-ref dp (- i 1)) j) mod)
                             0))
      (define add-count (if (>= j k)
                           (mod (vector-ref (vector-ref dp (- i 1)) (- j k)) mod)
                           0))
      (vector-set! (vector-ref dp i) j (mod (+ new-count add-count) mod))))
  (vector-ref (vector-ref dp l) n))