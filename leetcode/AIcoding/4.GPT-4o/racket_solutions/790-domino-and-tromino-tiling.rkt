(define (numTilings n)
  (define mod 1000000007)
  (define dp (make-vector (+ n 1) 0))
  (define dp2 (make-vector (+ n 1) 0))
  (vector-set! dp 0 1)
  (vector-set! dp 1 1)
  (for ([i (in-range 2 (+ n 1))])
    (vector-set! dp i (mod (+ (vector-ref dp (- i 1)) (vector-ref dp (- i 2)) (mod (* 2 (vector-ref dp2 (- i 2))) mod)) mod))
    (vector-set! dp2 i (mod (+ (vector-ref dp2 (- i 1)) (vector-ref dp2 (- i 2))) mod)))
  (vector-ref dp n))