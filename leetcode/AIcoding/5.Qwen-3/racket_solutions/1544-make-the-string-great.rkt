(define (make-the-string-great s)
  (define (is-bad a b)
    (and (not (char=? a b))
         (char=? (char-downcase a) (char-downcase b))))
  (let loop ((s (string->list s)) (result '()))
    (if (null? s)
        (list->string (reverse result))
        (let ((current (car s)))
          (if (and (not (null? result))
                   (is-bad (car result) current))
              (loop (cdr s) (cdr result))
              (loop (cdr s) (cons current result)))))))