(define (exist board word)
  (define rows (length board))
  (define cols (length (car board)))
  (define (dfs i j k visited)
    (if (= k (string-length word))
        #t
        (and (>= i 0) (< i rows) (>= j 0) (< j cols)
             (not (member (list i j) visited))
             (char=? (string-ref word k) (string-ref (list-ref board i) j))
             (or (dfs (+ i 1) j (+ k 1) (cons (list i j) visited))
                 (dfs (- i 1) j (+ k 1) (cons (list i j) visited))
                 (dfs i (+ j 1) (+ k 1) (cons (list i j) visited))
                 (dfs i (- j 1) (+ k 1) (cons (list i j) visited)))))
  (for/or ((i (in-range rows)) (j (in-range cols)))
    (and (char=? (string-ref word 0) (string-ref (list-ref board i) j))
         (dfs i j 0 '()))))