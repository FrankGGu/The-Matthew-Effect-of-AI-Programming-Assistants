(define (minimum-time-trips time total-trips)
  (define (enough? t)
    (for/sum ([t-i time]) (quotient t t-i)) >= total-trips)
  (define low 1)
  (define high (apply * time))
  (let loop ([low low] [high high])
    (if (<= low high)
        (let ([mid (quotient (+ low high) 2)])
          (if (enough? mid)
              (loop low (sub1 mid))
              (loop (add1 mid) high)))
        low)))