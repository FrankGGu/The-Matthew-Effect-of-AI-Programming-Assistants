(define (plus-one digits)
  (define (add-carried digits carry)
    (if (null? digits)
        (if (= carry 1) '(1) '())
        (let* ((digit (car digits))
               (sum (+ digit carry))
               (new-digit (modulo sum 10))
               (new-carry (quotient sum 10)))
          (cons new-digit (add-carried (cdr digits) new-carry)))))
  (reverse (add-carried (reverse digits) 1)))