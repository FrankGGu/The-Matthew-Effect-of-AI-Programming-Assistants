(define/contract (find-indices height)
  (-> (listof exact-integer?) (listof exact-integer?))
  (define n (length height))
  (define result '())
  (for ([i (in-range n)])
    (when (and (< i (- n 1)) (< i (- n 2)))
      (when (<= (list-ref height i) (list-ref height (+ i 1)))
        (when (<= (list-ref height i) (list-ref height (+ i 2)))
          (set! result (cons i result)))))
  (reverse result))