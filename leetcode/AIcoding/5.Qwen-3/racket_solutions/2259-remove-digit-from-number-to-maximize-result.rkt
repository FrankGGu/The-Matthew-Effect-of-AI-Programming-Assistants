(define (remove-digit-from-number-to-maximize-result number digit)
  (define d (string-ref digit 0))
  (define n (string-length number))
  (define max-num (make-string n #\0))
  (define-values (best-index best-val)
    (for/fold ([best-index -1] [best-val #f])
              ([i (in-range n)])
      (when (char=? (string-ref number i) d)
        (define candidate (substring number 0 i))
        (define candidate (string-append candidate (substring number (+ i 1) n)))
        (define val (string->number candidate))
        (if (or (not best-val) (> val best-val))
            (values i val)
            (values best-index best-val))))
    )
  (if (= best-index -1)
      (string->number (substring number 0 (- n 1)))
      (string->number (string-append (substring number 0 best-index) (substring number (+ best-index 1) n)))))