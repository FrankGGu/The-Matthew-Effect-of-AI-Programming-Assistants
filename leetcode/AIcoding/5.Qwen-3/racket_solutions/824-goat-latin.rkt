(define (to-goat-latin sentence)
  (define (translate-word word i)
    (define first-char (string-ref word 0))
    (define vowels #(#\a #\e #\i #\o #\u #\A #\E #\I #\O #\U))
    (if (member first-char vowels)
        (string-append word "ma")
        (string-append (substring word 1) (string first-char) "ma"))
    (string-append (translate-word word i) (make-string i #\a)))
  (define (helper words i)
    (if (null? words)
        ""
        (string-append (translate-word (car words) i) " " (helper (cdr words) (+ i 1)))))
  (define words (string-split sentence))
  (substring (helper words 1) 0 (- (string-length (helper words 1)) 1)))