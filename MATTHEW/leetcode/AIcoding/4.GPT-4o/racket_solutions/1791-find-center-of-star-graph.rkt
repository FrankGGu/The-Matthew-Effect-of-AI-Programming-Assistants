(define (find-center edges)
  (let ((degree (make-vector (+ 1 (apply max (map (lambda (e) (max (car e) (cadr e))) edges))) 0)))
    (for-each (lambda (e)
                (vector-set! degree (car e) (+ 1 (vector-ref degree (car e))))
                (vector-set! degree (cadr e) (+ 1 (vector-ref degree (cadr e)))))
              edges)
    (let loop ((i 1))
      (cond ((> i (vector-length degree)) 0)
            ((= (vector-ref degree i) (- (length edges) 1)) i)
            (else (loop (+ i 1)))))))