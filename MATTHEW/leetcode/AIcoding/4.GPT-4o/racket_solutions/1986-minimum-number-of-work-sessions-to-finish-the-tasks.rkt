(define (minSessions tasks sessionTime)
  (define (dp mask)
    (if (= mask (bitwise-ior (apply bitwise-ior (map (lambda (i) (bitwise-shift-left 1 i)) (iota (length tasks))))))
      0
      (define min-sessions +inf.0)
      (for ([i (in-range (length tasks))])
        (when (zero? (bitwise-and mask (bitwise-shift-left 1 i)))
          (let ([new-mask (bitwise-ior mask (bitwise-shift-left 1 i))])
            (for ([j (in-range i (length tasks))])
              (when (and (zero? (bitwise-and mask (bitwise-shift-left 1 j)))
                         (<= (+ (list-ref tasks i) (list-ref tasks j)) sessionTime))
                (set! min-sessions (min min-sessions (+ 1 (dp (bitwise-ior new-mask (bitwise-shift-left 1 j)))))))))))
      min-sessions))
  (dp 0))