(define (minOperations grid)
  (define rows (length grid))
  (define cols (length (car grid)))
  (define (calc-min-ops y x)
    (define ops 0)
    (for ([i (in-range rows)])
      (for ([j (in-range cols)])
        (define dist (abs (- i y)) + (abs (- j x)))
        (set! ops (+ ops dist))))
    ops)
  (define min-ops +inf.0)
  (for ([i (in-range rows)])
    (for ([j (in-range cols)])
      (set! min-ops (min min-ops (calc-min-ops i j)))))
  min-ops)