(define (describePainting painting)
  (define (count-colors lst)
    (foldl (lambda (color acc)
              (hash-update acc color (lambda (n) (+ n 1)) 1))
            (make-hash) lst))
  (define color-counts (count-colors painting))
  (define sorted-colors (sort (hash->list color-counts)
                               (lambda (a b) (if (= (cdr a) (cdr b))
                                                 (string<? (car a) (car b))
                                                 (> (cdr a) (cdr b))))))
  (map (lambda (pair) (string-append (car pair) ": " (number->string (cdr pair))))
       sorted-colors))