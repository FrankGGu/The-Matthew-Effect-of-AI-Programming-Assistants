(define (min-subarray-length target nums)
  (define n (length nums))
  (define (helper start end sum min-length)
    (if (>= sum target)
        (min min-length (- end start))
        (if (>= end n)
            min-length
            (helper start (add1 end) (if (< end n) (+ sum (list-ref nums end)) sum) min-length))))
  (define (find-length start end min-length)
    (if (< start n)
        (let ((new-sum (foldl + 0 (sublist nums start end))))
          (if (>= new-sum target)
              (find-length (add1 start) end (min min-length (- end start)))
              (find-length start (add1 end) min-length)))
        min-length))
  (let ((result (find-length 0 0 n)))
    (if (= result n) 0 result)))

(define (minSubArrayLen target nums)
  (min-subarray-length target nums))