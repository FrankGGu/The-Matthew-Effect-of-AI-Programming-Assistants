(define (adjacent-increasing-subarrays nums)
  (define (check-increasing lst)
    (for/or ([i (in-range (sub1 (length lst)))])
      (> (list-ref lst i) (list-ref lst (+ i 1)))))

  (define (find-subarrays lst)
    (let loop ([i 0] [result '()])
      (if (>= i (length lst))
          (reverse result)
          (let ([start i])
            (while (and (< (+ i 1) (length lst)) 
                        (< (list-ref lst i) (list-ref lst (+ i 1))))
              (set! i (+ i 1)))
            (if (> i start)
                (loop (+ i 1) (cons (sublist lst start (+ i 1)) result))
                (loop (+ i 1) result))))))

  (define subarrays (find-subarrays nums))
  (for/or ([subarray subarrays])
    (check-increasing subarray)))