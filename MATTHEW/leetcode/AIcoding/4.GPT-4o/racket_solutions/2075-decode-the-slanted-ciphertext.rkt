(define (decodeCiphertext ciphertext rows)
  (define cols (string-length ciphertext))
  (define (get-char i j)
    (define index (+ (* j rows) i))
    (if (< index cols)
        (string-ref ciphertext index)
        #\space))
  (define (build-decoded-string)
    (define result '())
    (for ([j (in-range (ceiling (/ cols rows)))])
      (define row '())
      (for ([i (in-range rows)])
        (define char (get-char i j))
        (if (not (= char #\space))
            (set! row (cons char row))))
      (set! result (append result (reverse row))))
    (apply string-append result))
  (define decoded (build-decoded-string))
  (define (trim-right s)
    (if (or (string-empty? s) (char=? (string-ref s (sub1 (string-length s))) #\space))
        (trim-right (substring s 0 (sub1 (string-length s))))
        s))
  (trim-right decoded))

(define (decodeCiphertext-main)
  (define ciphertext (read-line))
  (define rows (read))
  (display (decodeCiphertext ciphertext rows)))

(decodeCiphertext-main)