(define (group-anagrams strs)
  (define (sort-string s)
    (apply string (sort (string->list s) char<?)))
  (define groups (make-hash))
  (for-each (lambda (s)
              (let ((sorted (sort-string s)))
                (hash-set! groups sorted (cons s (hash-ref groups sorted '())))))
            strs)
  (hash-map groups (lambda (k v) v))
  (hash->list groups))