(define (can-arrange-people heights)
  (define (helper h1 h2)
    (if (null? h1)
        (null? h2)
        (or (null? (cdr h1)) 
            (and (= (car h1) (car h2))
                 (helper (cdr h1) (cdr h2))))))
  (define sorted (sort heights <))
  (define counts (map (lambda (h) (count (lambda (x) (= x h)) heights)) sorted))
  (helper sorted counts))