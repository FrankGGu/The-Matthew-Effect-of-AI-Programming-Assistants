(define (discount-prices prices n discount)
  (define (apply-discount lst count)
    (if (null? lst)
        '()
        (let* ((current (car lst))
               (next (apply-discount (cdr lst) (if (= count n) 1 (+ count 1)))))
          (if (= count n)
              (cons (* current (- 1 (/ discount 100.0))) next)
              (cons current next)))))
  (apply-discount prices 1))