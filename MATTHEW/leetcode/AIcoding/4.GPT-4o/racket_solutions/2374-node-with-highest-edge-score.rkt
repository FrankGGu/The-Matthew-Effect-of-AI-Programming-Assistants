(define (edgeScore edges)
  (let* ((n (length edges))
         (scores (make-vector n 0)))
    (for ([i (in-range n)])
      (let ([to (vector-ref edges i)])
        (vector-set! scores to (+ (vector-ref scores to) i))))
    (let loop ([max-score 0] [max-index 0] [i 0])
      (if (< i n)
          (let ([current-score (vector-ref scores i)])
            (if (> current-score (vector-ref scores max-index))
                (loop current-score i (+ i 1))
                (loop max-score max-index (+ i 1)))
          max-index)))))

(edgeScore (vector 1 0 0 0 0 7 7 5 5 5))