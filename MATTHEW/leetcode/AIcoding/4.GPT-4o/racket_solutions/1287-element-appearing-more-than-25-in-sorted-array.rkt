(define (find-special-element arr)
  (define len (length arr))
  (define threshold (/ len 4))
  (define (helper lst count)
    (if (null? lst)
        (if (>= count threshold) (car lst) -1)
        (let ((current (car lst))
              (next (if (null? (cdr lst)) (car lst) (cadr lst))))
          (if (= current next)
              (helper (cdr lst) (+ count 1))
              (if (>= count threshold) current (helper (cdr lst) 1))))))
  (helper arr 0))

