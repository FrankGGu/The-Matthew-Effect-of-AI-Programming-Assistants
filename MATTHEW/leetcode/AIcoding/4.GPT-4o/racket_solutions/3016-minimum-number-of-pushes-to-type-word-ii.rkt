(define (minPushes word1 word2)
  (define (lcs s1 s2)
    (define n (string-length s1))
    (define m (string-length s2))
    (define dp (make-vector (+ 1 n) (make-vector (+ 1 m) 0)))
    (for ([i (in-range 1 (+ 1 n))])
      (for ([j (in-range 1 (+ 1 m))])
        (if (char=? (string-ref s1 (- i 1)) (string-ref s2 (- j 1)))
            (vector-set! (vector-ref dp i) j (+ 1 (vector-ref (vector-ref dp (- i 1)) (- j 1))))
            (vector-set! (vector-ref dp i) j (max (vector-ref (vector-ref dp i) (- j 1)) (vector-ref (vector-ref dp (- i 1)) j))))))
    (vector-ref (vector-ref dp n) m))

  (define lcs-length (lcs word1 word2))
  (+ (string-length word1) (string-length word2) (- (* 2 lcs-length))))