(define (minOperations nums)
  (define n (length nums))
  (define ones (filter (lambda (x) (= x 1)) nums))
  (if (null? ones) 
      (if (= n 0) 0 1)
      (let* ((count-ones (length ones))
             (max-distance 0))
        (for ([i (in-range n)])
          (when (= (list-ref nums i) 1)
            (let ((distance (if (null? ones) 0 
                               (for/fold ([d 0]) ([j (in-range n)])
                                 (if (= (list-ref nums j) 1) 
                                     (set! d (max d (abs (- i j)))) 
                                     d))))) 
              (set! max-distance (max max-distance distance)))))
        (let ((remaining-zeros (- n count-ones)))
          (min remaining-zeros max-distance))))))