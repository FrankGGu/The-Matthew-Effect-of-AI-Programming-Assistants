(define (merge-similar-items items1 items2)
  (define hash (make-hash))
  (for ([item items1])
    (hash-set! hash (car item) (cadr item)))
  (for ([item items2])
    (let ([value (car item)] [weight (cadr item)])
      (if (hash-has-key? hash value)
          (hash-update! hash value (lambda (old-weight) (+ old-weight weight)))
          (hash-set! hash value weight)))))
  (sort (map (lambda (key) (list key (hash-ref hash key))) (hash-keys hash)) < #:key car))