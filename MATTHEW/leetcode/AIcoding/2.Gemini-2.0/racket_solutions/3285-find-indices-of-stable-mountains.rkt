(define (find-indices-of-stable-mountains arr k)
  (let* ((n (length arr))
         (result '()))
    (for ((i (in-range (- n k) 0 -1)))
      (let loop ((j 0)
                 (peak #f))
        (cond
          ((= j k)
           (set! result (cons i result)))
          ((and peak (> (list-ref arr (+ i j)) (list-ref arr (+ i j 1))))
           (void))
          ((and peak (= (list-ref arr (+ i j)) (list-ref arr (+ i j 1))))
           (void))
          ((and (not peak) (< (list-ref arr (+ i j)) (list-ref arr (+ i j 1))))
           (loop (+ j 1) #f))
          ((and (not peak) (> (list-ref arr (+ i j)) (list-ref arr (+ i j 1))))
           (loop (+ j 1) #t))
          ((and (not peak) (= (list-ref arr (+ i j)) (list-ref arr (+ i j 1))))
           (void))
          (else (void)))))
    (reverse result)))