(define (shortest-distance words target start)
  (let* ((n (length words))
         (distances '()))
    (for ([i (in-range n)])
      (let ((index (modulo (+ start i) n)))
        (when (equal? (list-ref words index) target)
          (set! distances (cons i distances)))))
    (for ([i (in-range n)])
      (let ((index (modulo (+ start (- i)) n)))
        (when (equal? (list-ref words index) target)
          (set! distances (cons i distances)))))
    (if (null? distances)
        -1
        (apply min distances))))