(define (day-of-the-year date)
  (define days-in-month (vector 31 28 31 30 31 30 31 31 30 31 30 31))
  (define year (string->number (list-ref (string-split date "/") 0)))
  (define month (string->number (list-ref (string-split date "/") 1)))
  (define day (string->number (list-ref (string-split date "/") 2)))
  (define is-leap (and (zero? (modulo year 4)) (not (zero? (modulo year 100))) (or (zero? (modulo year 400)) (zero? (modulo year 4)))))
  (when is-leap (vector-set! days-in-month 1 29))
  (for/sum ([i (in-range (sub1 month))])
    (vector-ref days-in-month i))
  (+ (for/sum ([i (in-range (sub1 month))])
       (vector-ref days-in-month i))
     day))