(define/contract (daily-temperatures temperatures)
  (-> (listof exact-integer?) (listof exact-integer?))
  (let ((n (length temperatures))
        (result (make-vector 100000 0))
        (stack '()))
    (for ([i (in-range n)])
      (let loop ()
        (when (and (not (null? stack))
                   (< (vector-ref temperatures (car stack)) (vector-ref temperatures i)))
          (let ((prev (car stack)))
            (vector-set! result prev (- i prev))
            (set! stack (cdr stack))
            (loop))))
      (set! stack (cons i stack)))
    (take (vector->list result) n))
  )