(define (find-closest-person n, meetings)
  (define (helper i res)
    (if (>= i n)
        res
        (let ((dist (car res))
              (pos (cadr res)))
          (let ((curr (list-ref meetings i)))
            (if (null? curr)
                (helper (+ i 1) res)
                (let ((curr-dist (abs (- (car curr) i))))
                  (if (< curr-dist dist)
                      (helper (+ i 1) (list curr-dist i))
                      (if (= curr-dist dist)
                          (helper (+ i 1) (list curr-dist (min i pos)))
                          (helper (+ i 1) res)))))))))
  (let ((res (helper 0 (list +inf.0 -1))))
    (cadr res)))