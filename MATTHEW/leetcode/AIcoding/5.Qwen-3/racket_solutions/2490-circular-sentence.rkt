(define (is-circular? sentence)
  (let ((words (string-split sentence)))
    (and (= (length words) (length (remove-duplicates words)))
         (for/and ((i (in-range (length words))))
           (let ((current (list-ref words i))
                 (next (list-ref words (modulo (+ i 1) (length words)))))
             (and (not (string=? current ""))
                  (char=? (string-ref current (- (string-length current) 1))
                          (string-ref next 0))))))) )