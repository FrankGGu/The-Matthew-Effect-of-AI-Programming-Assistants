(define (fill-ponds n m grid)
  (define (dfs i j)
    (when (and (<= 0 i n) (<= 0 j m) (not (vector-ref (vector-ref grid i) j)))
      (vector-set! (vector-ref grid i) j #t)
      (dfs (add1 i) j)
      (dfs (sub1 i) j)
      (dfs i (add1 j))
      (dfs i (sub1 j))))
  (for ([i (in-range n)])
    (for ([j (in-range m)])
      (when (and (or (= i 0) (= i (sub1 n)) (or (= j 0) (= j (sub1 m))))
                 (not (vector-ref (vector-ref grid i) j)))
        (dfs i j))))
  (for/sum ([i (in-range n)]
            [j (in-range m)])
    (if (vector-ref (vector-ref grid i) j) 0 1)))