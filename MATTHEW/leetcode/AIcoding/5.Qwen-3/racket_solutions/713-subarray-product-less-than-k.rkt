(define (num-subarray-product-less-than-k nums k)
  (if (<= k 1)
      0
      (let ((n (length nums))
            (count 0)
            (left 0)
            (product 1))
        (for ([right (in-range n)])
          (set! product (* product (list-ref nums right)))
          (while (> product k)
            (set! product (/ product (list-ref nums left)))
            (set! left (+ left 1)))
          (set! count (+ count (- right left 1))))
        count)))