(define (deck-revealed-in-increasing-order deck)
  (define n (length deck))
  (define indices (range n))
  (define result (make-vector n))
  (define sorted-deck (sort deck <))
  (let loop ()
    (when (not (null? indices))
      (vector-set! result (car indices) (car sorted-deck))
      (set! sorted-deck (cdr sorted-deck))
      (set! indices (append (cdr indices) (list (car indices))))
      (loop)))
  (vector->list result))