(define (min-cost-to-make-roses-colorful)
  (define input (read-line))
  (define cost (map string->number (string-split (read-line))))
  (define n (length cost))
  (define res 0)
  (define i 0)
  (define j 1)
  (define prev-char #\a)
  (define prev-cost 0)
  (define (loop)
    (when (< i n)
      (set! prev-char (string-ref input i))
      (set! prev-cost (list-ref cost i))
      (set! j (+ i 1))
      (when (< j n)
        (when (= (string-ref input j) prev-char)
          (set! res (+ res (list-ref cost j)))
          (set! j (+ j 1))
          (when (< j n)
            (set! prev-cost (min prev-cost (list-ref cost j)))
            (set! res (+ res (list-ref cost j)))
            (set! j (+ j 1)))))
      (set! i (+ i 1))
      (loop)))
  (loop)
  res)