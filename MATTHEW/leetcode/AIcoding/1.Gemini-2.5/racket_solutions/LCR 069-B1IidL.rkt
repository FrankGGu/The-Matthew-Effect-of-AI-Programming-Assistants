(define (peak-index-in-mountain-array arr)
  (let* ((n (vector-length arr))
         (low 0)
         (high (- n 1)))
    (let loop ((l low) (h high))
      (if (< l h)
          (let* ((mid (+ l (quotient (- h l) 2)))
                 (mid-val (vector-ref arr mid))
                 (next-val (vector-ref arr (+ mid 1))))
            (if (< mid-val next-val)
                (loop (+ mid 1) h)
                (loop l mid)))
          l))))