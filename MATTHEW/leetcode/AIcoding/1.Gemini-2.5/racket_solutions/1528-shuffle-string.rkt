(define (restore-string s indices)
  (let* ((n (string-length s))
         (res-vec (make-vector n #\space))
         (indices-vec (list->vector indices)))
    (for ((i (in-range n)))
      (let ((char-to-place (string-ref s i))
            (target-index (vector-ref indices-vec i)))
        (vector-set! res-vec target-index char-to-place)))
    (list->string (vector->list res-vec))))