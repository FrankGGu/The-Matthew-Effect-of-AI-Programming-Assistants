(define (minimize-result expression)
  (let* ((plus-idx (string-index expression #\+))
         (num1-str (substring expression 0 plus-idx))
         (num2-str (substring expression (+ plus-idx 1) (string-length expression)))
         (len1 (string-length num1-str))
         (len2 (string-length num2-str)))
    (let loop ((i 0)
               (min-val +inf.0)
               (min-res-str ""))
      (if (>= i len1)
          min-res-str
          (let* ((prefix1-str (substring num1-str 0 i))
                 (middle1-str (substring num1-str i len1))
                 (val-prefix1 (if (string=? prefix1-str "") 1 (string->number prefix1-str)))
                 (val-middle1 (string->number middle1-str)))
            (let loop-inner ((j 1)
                             (current-min-val min-val)
                             (current-min-res-str min-res-str))
              (if (> j len2)
                  (loop (+ i 1) current-min-val current-min-res-str)
                  (let* ((middle2-str (substring num2-str 0 j))
                         (suffix2-str (substring num2-str j len2))
                         (val-middle2 (string->number middle2-str))
                         (val-suffix2 (if (string=? suffix2-str "") 1 (string->number suffix2-str)))
                         (current-val (* val-prefix1 (+ val-middle1 val-middle2) val-suffix2)))
                    (if (< current-val current-min-val)
                        (loop-inner (+ j 1)
                                    current-val
                                    (string-append prefix1-str "(" middle1-str "+" middle2-str ")" suffix2-str))
                        (loop-inner (+ j 1) current-min-val current-min-res-str))))))))))