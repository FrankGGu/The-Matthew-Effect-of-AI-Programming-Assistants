(define (answer-queries nums queries)
  (let ((sorted-nums (sort nums <)))
    (map (lambda (q)
           (let loop ((remaining-nums sorted-nums)
                      (current-sum 0)
                      (current-length 0))
             (if (and (not (empty? remaining-nums))
                      (<= (+ current-sum (car remaining-nums)) q))
                 (loop (cdr remaining-nums)
                       (+ current-sum (car remaining-nums))
                       (+ current-length 1))
                 current-length)))
         queries)))