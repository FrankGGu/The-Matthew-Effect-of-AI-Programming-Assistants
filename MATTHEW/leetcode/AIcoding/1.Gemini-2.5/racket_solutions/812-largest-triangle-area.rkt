(define (largest-triangle-area points)
  (let* ((n (length points))
         (max-area 0.0))
    (for ((i (in-range n)))
      (for ((j (in-range (+ i 1) n)))
        (for ((k (in-range (+ j 1) n)))
          (let* ((p1 (list-ref points i))
                 (p2 (list-ref points j))
                 (p3 (list-ref points k))
                 (x1 (list-ref p1 0))
                 (y1 (list-ref p1 1))
                 (x2 (list-ref p2 0))
                 (y2 (list-ref p2 1))
                 (x3 (list-ref p3 0))
                 (y3 (list-ref p3 1))
                 (current-area (* 0.5 (abs (+ (* x1 (- y2 y3))
                                                (* x2 (- y3 y1))
                                                (* x3 (- y1 y2)))))))
            (set! max-area (max max-area current-area))))))
    max-area))