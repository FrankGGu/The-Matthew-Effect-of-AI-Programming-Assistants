(define (max-distance-in-arrays arrays)
  (let* ((first-array (car arrays))
         (initial-min (car first-array))
         (initial-max (last first-array))
         (result (foldl (lambda (current-array acc)
                          (let* ((current-max-dist (car acc))
                                 (min-so-far (cadr acc))
                                 (max-so-far (caddr acc))
                                 (c-min (car current-array))
                                 (c-max (last current-array))
                                 (new-max-dist (max current-max-dist
                                                    (abs (- c-max min-so-far))
                                                    (abs (- c-min max-so-far))))
                                 (new-min-so-far (min min-so-far c-min))
                                 (new-max-so-far (max max-so-far c-max)))
                            (list new-max-dist new-min-so-far new-max-so-far)))
                        (list 0 initial-min initial-max)
                        (cdr arrays))))
    (car result)))