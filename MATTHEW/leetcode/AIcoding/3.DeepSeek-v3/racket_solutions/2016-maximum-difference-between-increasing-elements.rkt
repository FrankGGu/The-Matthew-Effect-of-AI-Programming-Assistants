(define/contract (maximum-difference nums)
  (-> (listof exact-integer?) exact-integer?)
  (let loop ([i 1] [min-so-far (car nums)] [max-diff -1])
    (if (>= i (length nums))
        (if (>= max-diff 0) max-diff -1)
        (let ([current (list-ref nums i)])
            (if (> current min-so-far)
                (loop (+ i 1) min-so-far (max max-diff (- current min-so-far)))
                (loop (+ i 1) current max-diff))))))